FROM python:3.12-slim

WORKDIR /app

# Install uv
RUN pip install uv

# Copy project files
COPY pyproject.toml .
COPY src/ src/

# Install dependencies
RUN uv pip install --system -e .

# Expose port
EXPOSE 8080

# Run the application
CMD ["uvicorn", "youtube_guard.main:app", "--host", "0.0.0.0", "--port", "8080"]
